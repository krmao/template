        <attr name="cxProgressVisible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>
    
    <declare-styleable name="CXRoundImageView">
        <attr name="cxBorderWidth" format="dimension" />
        <attr name="cxBorderColor" format="color" />
        <attr name="cxProgressColor" format="color" />
        <attr name="cxProgressBorder" format="integer" />
        <attr name="cxCornerRadius" format="dimension" />
        <attr name="cxLeftTopCornerRadius" format="dimension" />
        <attr name="cxRightTopCornerRadius" format="dimension" />
        <attr name="cxLeftBottomCornerRadius" format="dimension" />
        <attr name="cxRightBottomCornerRadius" format="dimension" />
