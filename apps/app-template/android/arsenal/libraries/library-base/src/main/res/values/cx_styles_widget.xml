<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CXWidget.App.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="CXWidget.App.PopupWindow" parent="@style/Widget.AppCompat.PopupWindow">
        <item name="android:background">?android:attr/background</item>
        <item name="android:textColor">?android:attr/textColor</item>
        <!--设置不遮盖toolbar-->
        <item name="overlapAnchor">?android:attr/overlapAnchor</item>
    </style>

    <style name="CXWidget.App.DrawerArrowToggle" parent="@style/Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="CXWidget.App.ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/cx_titlebar_progressbar_horizontal_progress_drawable</item>
    </style>

</resources>
