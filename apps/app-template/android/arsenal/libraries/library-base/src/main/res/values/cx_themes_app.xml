<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- @see http://www.gadgetsaint.com/tips/change-statusbar-color-android/#.Wt6yf1OFPVo -->

    <style name="CXAppTheme.Light.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.Left_Right</item>
        <item name="colorPrimary">@color/cx_primary</item>
        <item name="colorPrimaryDark">@color/cx_primary_dark</item> <!-- this is the statusBar color -->
        <item name="colorAccent">@color/cx_accent</item>
    </style>

    <style name="CXAppTheme.Light.Launch" parent="@style/CXAppTheme.Light.NoActionBar">
        <!-- Show a splash screen on the activity. Automatically removed when
            Flutter draws its first frame -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CXAppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.Left_Right</item>
        <item name="colorPrimary">@color/cx_primary</item>
        <item name="colorPrimaryDark">@color/cx_primary_dark</item> <!-- this is the statusBar color -->
        <item name="colorAccent">@color/cx_accent</item>
    </style>

    <style name="CXAppTheme.NoActionBar.FullScreen" parent="@style/android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.Left_Right</item>
    </style>

    <style name="CXAppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/CXWidget.App.DrawerArrowToggle</item>
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.Left_Right</item>
        <item name="colorPrimary">@color/cx_primary</item>
        <item name="colorPrimaryDark">@color/cx_primary_dark</item> <!-- this is the statusBar color -->
        <item name="colorAccent">@color/cx_accent</item>
    </style>

    <style name="CXAppTheme.Translucent" parent="@style/CXAppTheme.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.Left_Right</item>
    </style>

    <style name="CXAppTheme.Translucent.Launch" parent="@style/CXAppTheme.Translucent">
        <!-- Show a splash screen on the activity. Automatically removed when
            Flutter draws its first frame -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CXAppTheme.Translucent.Notification" parent="@style/CXAppTheme.Translucent">
        <item name="android:windowAnimationStyle">@style/CXWidget.Animation.Activity.FADE_IN_OUT</item>
    </style>

    <style name="CXAppTheme.Translucent.ActionBar" parent="@style/CXAppTheme.ActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CXAppTheme.Translucent.FullScreen" parent="@style/CXAppTheme.NoActionBar.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
