<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <com.smart.library.widget.titlebar.CXTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:cxTitleText="ROCKET IM" />

    <com.smart.library.widget.loading.CXFrameLoadingLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recv_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background_normal"
                    android:gravity="start"
                    android:hint="等待接收好友发过来的消息"
                    android:minLines="5"
                    android:textSize="12sp"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/recv_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="接收"
                    android:textColor="#333" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/send_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background_normal"
                    android:gravity="start"
                    android:hint="请输入需要发送的信息"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:textSize="12sp"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/send_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#333" />

            </LinearLayout>
        </LinearLayout>

    </com.smart.library.widget.loading.CXFrameLoadingLayout>
</LinearLayout>
