<?xml version="1.0" encoding="utf-8"?>
<com.smart.library.widget.STSwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/final_behavior_border_bottom"
    app:stEnableBlockingMode="true"
    app:stEnableSwipe="true"
    app:stIsRightToLeft="true"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="从右向左滑动"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <!-- 以下都是侧滑菜单的内容依序排列 -->

    <Button
        android:id="@+id/btnUnRead"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:background="#99ecd50a"
        android:text="标记未读"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#cc330033"
        android:text="删除"
        android:textColor="@android:color/white" />
</com.smart.library.widget.STSwipeMenuLayout>