<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/topEmptyView_failure"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="60pt"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_failure"
            android:layout_width="750pt"
            android:layout_height="750pt"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/final_icon_frame_error" />

        <TextView
            android:id="@+id/text_failure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="15pt"
            android:paddingLeft="30pt"
            android:layout_marginTop="40pt"
            android:paddingRight="30pt"
            android:paddingTop="15pt"
            android:text="@string/st_loading_network_error"
            android:textColor="#999"
            android:textSize="15pt"
            android:textStyle="bold"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <View
        android:id="@+id/bottomEmptyView_failure"
        android:layout_width="match_parent"
        android:layout_height="0pt"
        android:layout_weight="2" />
</LinearLayout>
