<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signalStrength"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/customTitle" />

    <TextView
        android:id="@+id/signalStrengthTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/excellent"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/ssid"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/customTitle" />

    <TextView
        android:id="@+id/ssidTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ssidLit"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/security"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/customTitle" />

    <TextView
        android:id="@+id/securityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/securityType"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/identity"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/customTitle" />

    <EditText
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="textPassword"
        android:hint="identity"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry"
        tools:ignore="Autofill,HardcodedText,LabelFor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/password"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/customTitle" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="textPassword"
        android:hint="password"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <CheckBox
        android:id="@+id/showPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/showPassword"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/customEntry" />

</LinearLayout>