<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_500"
    android:foreground="@drawable/st_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="HardcodedText,RtlSymmetry,SpUsage,UselessParent">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:text="wifi name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/bssIdTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="20dp"
                android:textColor="#ccc"
                android:textSize="12dp"
                tools:ignore="HardcodedText,RtlSymmetry,SpUsage"
                tools:text="bssid" />

            <TextView
                android:id="@+id/signalStrengthTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:textColor="#ccc"
                android:textSize="12dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="signalStrength" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/frequencyTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="20dp"
                android:textColor="#ccc"
                android:textSize="12dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="frequency" />

            <TextView
                android:id="@+id/levelTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:textColor="#ccc"
                android:textSize="12dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="level" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/securityTypeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#ccc"
                android:textSize="12dp"
                tools:ignore="HardcodedText,SpUsage"
                tools:text="securityType" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>