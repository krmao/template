<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fill">

    <RelativeLayout
        android:id="@+id/footer"
        style="@style/footer">

        <ImageView
            android:id="@+id/previous"
            style="@style/previousButton"
            android:contentDescription="@string/button.previous" />

        <ImageView
            android:id="@+id/next"
            style="@style/nextButton"
            android:contentDescription="@string/button.next" />

        <ImageView
            android:id="@+id/play"
            style="@style/footerButton"
            android:layout_toStartOf="@id/next"
            android:layout_toLeftOf="@id/next"
            android:contentDescription="@string/button.animate"
            android:src="@drawable/st_picture_viewer_play" />

        <TextView
            android:id="@+id/note"
            style="@style/footerNote"
            android:layout_toStartOf="@id/play"
            android:layout_toLeftOf="@id/play"
            android:layout_toEndOf="@id/previous"
            android:layout_toRightOf="@id/previous" />

    </RelativeLayout>

    <com.smart.template.home.pictureViewer.extension.views.STPictureViewerPinView
        android:id="@+id/imageView"
        style="@style/mainPanel" />

</RelativeLayout>
