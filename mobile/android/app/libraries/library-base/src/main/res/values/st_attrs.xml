<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="STFrameLoadingLayout">
        <attr name="stLoadingView" format="reference" />
        <attr name="stFailureView" format="reference" />
        <attr name="stEmptyView" format="reference" />
        <attr name="stCenterInParent" format="reference|boolean" />
        <attr name="stUseSmallStyle" format="reference|boolean" />
        <attr name="stScaleFactor" format="float" />
        <attr name="stAllBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="STTitleBar">
        <attr name="android:background" />
        <!--title-->
        <attr name="stTitleText" format="reference|string" />
        <attr name="stTitleSize" format="reference|dimension" />
        <attr name="stTitleTxtColor" format="reference|color" />
        <attr name="stTitleAppearance" format="integer" />
        <!--left0-->
        <attr name="stLeft0BgViewBackground" format="reference|color" />
        <attr name="stLeft0BgViewPadding" format="reference|dimension" />
        <attr name="stLeft0Visible" format="enum">
            <enum name="visible" value="0x00000000" />
            <enum name="invisible" value="0x00000004" />
            <enum name="gone" value="0x00000008" />
        </attr>
        <attr name="stLeft0Appearance" format="integer" />
        <attr name="stLeft0Background" format="reference|color" />
        <attr name="stLeft0Text" format="reference|string" />
        <attr name="stLeft0TextSize" format="reference|dimension" />
        <attr name="stLeft0TextColor" format="reference|color" />
        <attr name="stLeft0BgWidth" format="reference|dimension" />
        <attr name="stLeft0BgPaddingLeft" format="reference|dimension" />
        <attr name="stLeft0BgPaddingRight" format="reference|dimension" />
        <attr name="stLeft0BgPaddingTop" format="reference|dimension" />
        <attr name="stLeft0BgPaddingBottom" format="reference|dimension" />
        <attr name="stLeft0BgTextColor" format="reference|color" />
        <!--left1-->
        <attr name="stLeft1BgViewBackground" format="reference|color" />
        <attr name="stLeft1BgViewPadding" format="reference|dimension" />
        <attr name="stLeft1Visible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="stLeft1Appearance" format="integer" />
        <attr name="stLeft1Background" format="reference|color" />
        <attr name="stLeft1Text" format="reference|string" />
        <attr name="stLeft1TextSize" format="reference|dimension" />
        <attr name="stLeft1TextColor" format="reference|color" />
        <attr name="stLeft1BgWidth" format="reference|dimension" />
        <attr name="stLeft1BgPaddingLeft" format="reference|dimension" />
        <attr name="stLeft1BgPaddingRight" format="reference|dimension" />
        <attr name="stLeft1BgPaddingTop" format="reference|dimension" />
        <attr name="stLeft1BgPaddingBottom" format="reference|dimension" />
        <attr name="stLeft1BgTextColor" format="reference|color" />
        <!--right0-->
        <attr name="stRight0BgViewBackground" format="reference|color" />
        <attr name="stRight0BgViewPadding" format="reference|dimension" />
        <attr name="stRight0Visible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="stRight0Appearance" format="integer" />
        <attr name="stRight0Background" format="reference|color" />
        <attr name="stRight0Text" format="reference|string" />
        <attr name="stRight0TextSize" format="reference|dimension" />
        <attr name="stRight0TextColor" format="reference|color" />
        <attr name="stRight0BgWidth" format="reference|dimension" />
        <attr name="stRight0BgPaddingLeft" format="reference|dimension" />
        <attr name="stRight0BgPaddingRight" format="reference|dimension" />
        <attr name="stRight0BgPaddingTop" format="reference|dimension" />
        <attr name="stRight0BgPaddingBottom" format="reference|dimension" />
        <attr name="stRight0BgTextColor" format="reference|color" />
        <!--right1-->
        <attr name="stRight1BgViewBackground" format="reference|color" />
        <attr name="stRight1BgViewPadding" format="reference|dimension" />
        <attr name="stRight1Visible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
        <attr name="stRight1Appearance" format="integer" />
        <attr name="stRight1Background" format="reference|color" />
        <attr name="stRight1Text" format="reference|string" />
        <attr name="stRight1TextSize" format="reference|dimension" />
        <attr name="stRight1TextColor" format="reference|color" />
        <attr name="stRight1BgWidth" format="reference|dimension" />
        <attr name="stRight1BgPaddingLeft" format="reference|dimension" />
        <attr name="stRight1BgPaddingRight" format="reference|dimension" />
        <attr name="stRight1BgPaddingTop" format="reference|dimension" />
        <attr name="stRight1BgPaddingBottom" format="reference|dimension" />
        <attr name="stRight1BgTextColor" format="reference|color" />
        <attr name="stProgressDrawable" format="reference" />
        <attr name="stProgressVisible" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
            <enum name="gone" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="STEllipsizeEndTextView">
        <attr name="stLastScale" format="float" />
    </declare-styleable>

    <declare-styleable name="STDotsIndicator">
        <attr name="stDotsColor" format="color" />
        <attr name="stSelectedDotColor" format="color" />
        <attr name="stDotsSize" format="dimension" />
        <attr name="stDotsWidthFactor" format="float" />
        <attr name="stDotsSpacing" format="dimension" />
        <attr name="stDotsCornerRadius" format="dimension" />
        <attr name="stProgressMode" format="boolean" />
    </declare-styleable>

    <!-- swipe back attrs -->
    <declare-styleable name="STSwipeBackLayout">
        <attr name="stEdgeSize" format="dimension" />
        <attr name="stEdgeFlag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="stShadowLeft" format="reference" />
        <attr name="stShadowRight" format="reference" />
        <attr name="stShadowBottom" format="reference" />
    </declare-styleable>

    <attr name="STSwipeBackLayoutStyle" format="reference" />
</resources>
