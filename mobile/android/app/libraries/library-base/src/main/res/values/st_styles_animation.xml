<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="STWidget.Animation.Activity.None" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

    <style name="STWidget.Animation.Activity.LeftRight" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/st_anim_slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/st_anim_slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/st_anim_slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/st_anim_slide_out_right</item>
    </style>

    <style name="STWidget.Animation.Activity.Home" mce_bogus="1" parent="@style/STWidget.Animation.Activity.None" />

    <style name="STWidget.Animation.Activity.Fade" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/st_anim_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/st_anim_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/st_anim_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/st_anim_fade_out</item>
    </style>

    <style name="STWidget.Animation.BottomInOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/st_anim_translate_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/st_anim_translate_out_bottom</item>
    </style>

    <style name="STWidget.Animation.FadeInOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/st_anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/st_anim_fade_out</item>
    </style>

</resources>
