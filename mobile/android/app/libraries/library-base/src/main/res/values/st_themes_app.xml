<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- @see http://www.gadgetsaint.com/tips/change-statusbar-color-android/#.Wt6yf1OFPVo -->

    <style name="STAppTheme.NoActionBar" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.Left_Right</item>
        <item name="colorPrimary">@color/st_primary</item>
        <item name="colorPrimaryDark">@color/st_primary_dark</item> <!-- this is the statusBar color -->
        <item name="colorAccent">@color/st_accent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="STAppTheme.NoActionBar.FullScreen" parent="@style/STAppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.Left_Right</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="STAppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="drawerArrowStyle">@style/STWidget.App.DrawerArrowToggle</item>
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.Left_Right</item>
        <item name="colorPrimary">@color/st_primary</item>
        <item name="colorPrimaryDark">@color/st_primary_dark</item> <!-- this is the statusBar color -->
        <item name="colorAccent">@color/st_accent</item>
    </style>

    <style name="STAppTheme.Translucent" parent="@style/STAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.Left_Right</item>
    </style>

    <style name="STAppTheme.Translucent.Transparent" parent="@style/STAppTheme.Translucent">
        <item name="android:windowBackground">@color/finalTransparent</item>
    </style>

    <style name="STAppTheme.Translucent.Notification" parent="@style/STAppTheme.Translucent">
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.FADE_IN_OUT</item>
    </style>

    <style name="STAppTheme.Translucent.ActionBar" parent="@style/STAppTheme.ActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="STAppTheme.Translucent.FullScreen" parent="@style/STAppTheme.NoActionBar.FullScreen">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="STAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/st_primary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/st_primary_dark</item>
        <item name="colorAccent">@color/st_accent</item>
    </style>

    <style name="STAppTheme.Launch" parent="STAppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <!-- 一定是 true, 才能改变状态栏颜色 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="colorPrimaryDark">@color/st_launch_bg_color</item>
        <item name="android:windowBackground">@drawable/st_launch</item>
    </style>

    <style name="STAppTheme.Home" parent="STAppTheme">
        <item name="android:windowAnimationStyle">@style/STWidget.Animation.Activity.Home</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
</resources>
