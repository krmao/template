<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smart.library.flutter">

    <uses-permission android:name="android.permission.INTERNET" />
    <application>
        <activity
            android:name="com.smart.library.flutter.STFlutterBoostActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density"
            android:hardwareAccelerated="true"
            android:launchMode="standard"
            android:theme="@style/STAppTheme.Normal"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.smart.library.flutter.STFlutterBoostHomeActivity"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density"
            android:launchMode="singleTask"
            android:theme="@style/STAppTheme.Home.Transparent"
            android:windowSoftInputMode="stateHidden|adjustResize" />

    </application>

</manifest>
