<?xml version="1.0" encoding="utf-8"?>
<com.smart.library.map.layer.SignleTouchMotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_motionlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/st_pannel_scene"
    app:layout_collapseMode="parallax">

    <View
        android:id="@+id/black_backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:fitsSystemWindows="false" />

    <RelativeLayout
        android:id="@+id/sugar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/st_titlebar_height"
        android:layout_marginTop="25dp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="template"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <include
        layout="@layout/st_panel_content_layout"
        app:layout_constraintBottom_toBottomOf="parent" />

</com.smart.library.map.layer.SignleTouchMotionLayout>
