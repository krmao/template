<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/slideup_end"
        app:constraintSetStart="@id/slideup_start"
        app:duration="600"
        app:motionInterpolator="easeIn">
        <OnSwipe
            app:dragDirection="dragUp"
            app:maxAcceleration="600"
            app:touchAnchorId="@id/content"
            app:touchAnchorSide="top" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                app:framePosition="45"
                app:motionTarget="@id/sugar_title" />
            <KeyAttribute
                android:alpha="1"
                app:framePosition="90"
                app:motionTarget="@id/sugar_title" />
            <KeyAttribute
                android:alpha="0"
                app:framePosition="45"
                app:motionTarget="@id/sugar_title" />
            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                app:framePosition="90"
                app:motionTarget="@id/content" />
            <KeyPosition
                app:framePosition="90"
                app:keyPositionType="pathRelative"
                app:motionTarget="@id/sugar_title"
                app:percentX="0"
                app:percentY="0" />
            <KeyAttribute
                app:framePosition="95"
                app:motionTarget="@id/black_backgroundView">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@color/white" />
            </KeyAttribute>
            <KeyAttribute
                app:framePosition="40"
                app:motionTarget="@id/black_backgroundView">
                <CustomAttribute
                    app:attributeName="backgroundColor"
                    app:customColorValue="@android:color/transparent" />
            </KeyAttribute>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/slideup_start">
        <Constraint
            android:id="@id/black_backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@android:color/transparent" />
        </Constraint>
        <Constraint
            android:id="@id/content"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottomView"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/sugar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:alpha="0"
            app:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/slideup_end">
        <Constraint
            android:id="@id/black_backgroundView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <CustomAttribute
                app:attributeName="backgroundColor"
                app:customColorValue="@color/orange_900" />
        </Constraint>
        <Constraint
            android:id="@+id/content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sugar_title" />
        <Constraint
            android:id="@id/sugar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titleHeight"
            android:alpha="1"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>