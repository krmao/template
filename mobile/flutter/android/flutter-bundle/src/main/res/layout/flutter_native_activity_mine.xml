<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="[Native] 我的页面\nFlutter Native MainActivity"
        android:textColor="#333"
        android:textSize="28sp"
        android:textStyle="bold" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/native_open_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="15.0dp"
        android:text="native open native page"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/native_open_flutter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="15.0dp"
        android:text="native open flutter page in activity"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/native_open_flutter_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dp"
        android:layout_marginTop="8.0dp"
        android:layout_marginRight="8.0dp"
        android:layout_marginBottom="8.0dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="15.0dp"
        android:text="native open flutter page in fragment"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
