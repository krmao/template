{
    "name": "template-react",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "bootstrap": "npm install --force --legacy-peer-deps",
        "start": "react-native start --port=5387",
        "test": "jest",
        "lint": "eslint .",
        "bundle-ios": "rm -rf ./build/bundle/ios && mkdir ./build/bundle/ios             && react-native   bundle  --platform ios      --verbose --minify false --dev true  --entry-file ./index.js  --bundle-output ./build/bundle/ios/index.ios.bundle --assets-dest ./build/bundle/ios",
        "bundle-android": "rm -rf ./build/bundle/android && mkdir ./build/bundle/android && react-native   bundle  --platform android  --verbose --minify false --dev true  --entry-file ./index.js  --bundle-output ./build/bundle/android/index.android.bundle --assets-dest ./build/bundle/android",
        "eslint": "eslint --ext .jsx,.js ./ --fix --max-warnings 0",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,html,less,sass,css,yml}\" --ignore-path .prettierignore"
    },
    "dependencies": {
        "@react-native-community/masked-view": "^0.1.6",
        "prop-types": "^15.7.2",
        "react": "18.0.0",
        "react-native": "^0.69.3",
        "react-native-gesture-handler": "^2.5.0",
        "react-native-reanimated": "^2.9.1",
        "react-native-root-toast": "^3.4.0",
        "react-native-safe-area-context": "^4.3.1",
        "react-native-safe-area-view": "^1.1.1",
        "react-native-screens": "^3.15.0",
        "react-native-vector-icons": "^9.2.0",
        "react-navigation": "4.4.4",
        "react-navigation-stack": "^2.10.4",
        "react-navigation-tabs": "^2.11.2"
    },
    "localDependencies": {
        "metro": "../../../../smart-metro/packages-release/metro"
    },
    "devDependencies": {
        "@babel/core": "7.18.9",
        "@babel/eslint-parser": "7.18.9",
        "@babel/helper-plugin-utils": "7.18.9",
        "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
        "@babel/plugin-proposal-optional-chaining": "7.18.9",
        "@babel/preset-react": "^7.18.6",
        "@react-native-community/eslint-config": "^0.0.5",
        "babel-jest": "^28.1.3",
        "babel-plugin-import": "1.13.5",
        "dotenv": "^16.0.1",
        "eslint": "^8.0.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-import": "2.26.0",
        "eslint-plugin-jsx-a11y": "^6.6.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-plugin-react": "7.30.1",
        "eslint-plugin-react-hooks": "4.6.0",
        "eslint-plugin-react-native": "^4.0.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "jest": "^28.1.3",
        "less-loader": "5.0.0",
        "lint-staged": "10.5.4",
        "metro-react-native-babel-preset": "^0.56.0",
        "prettier": "2.3.1",
        "react-test-renderer": "16.9.0",
        "ts-loader": "^8.1.0"
    }
}
