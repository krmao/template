{
    "name": "template-react",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "start": "react-native start --port=5387",
        "test": "jest",
        "lint": "eslint .",
        "bundle-ios": "rm -rf ./build/bundle/ios && mkdir ./build/bundle/ios             && react-native   bundle  --platform ios      --verbose --minify false --dev true  --entry-file ./index.js  --bundle-output ./build/bundle/ios/index.ios.bundle --assets-dest ./build/bundle/ios",
        "bundle-android": "rm -rf ./build/bundle/android && mkdir ./build/bundle/android && react-native   bundle  --platform android  --verbose --minify false --dev true  --entry-file ./index.js  --bundle-output ./build/bundle/android/index.android.bundle --assets-dest ./build/bundle/android",
        "eslint": "eslint --fix src/",
        "format": "prettier --write \"**/*.{js,jsx,md,json,html,css,yml}\" --ignore-path .gitignore"
    },
    "dependencies": {
        "@react-native-community/masked-view": "^0.1.6",
        "prop-types": "^15.7.2",
        "react": "16.9.0",
        "react-native": "0.62.2",
        "react-native-gesture-handler": "1.5.3",
        "react-native-reanimated": "^1.6.0",
        "react-native-root-toast": "^3.2.0",
        "react-native-safe-area-context": "^0.6.2",
        "react-native-safe-area-view": "^1.0.0",
        "react-native-vector-icons": "^6.6.0",
        "react-navigation": "4.0.10",
        "react-navigation-stack": "^2.0.14",
        "react-navigation-tabs": "^2.7.0"
    },
    "localDependencies": {
        "metro": "../../../../smart-metro/packages-release/metro"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/runtime": "^7.8.3",
        "babel-eslint": "^10.0.3",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-native": "^3.8.1",
        "prettier": "^1.19.1",
        "@react-native-community/eslint-config": "^0.0.5",
        "babel-jest": "^24.9.0",
        "eslint": "^5.0.0",
        "jest": "^24.9.0",
        "metro-react-native-babel-preset": "^0.56.0",
        "react-test-renderer": "16.9.0"
    }
}
