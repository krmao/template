/** 
@import "common.wxss";

样式导入
使用@import语句可以导入外联样式表，@import后跟需要导入的外联样式表的相对路径，用;表示语句结束。
**/
page{
  --base-background-color:#009ad6;
  --base-button-background-color:#145b7d;
  background-color: var(--base-background-color);
}
 
.common-container{
  /* ---- common start ----*/
  width: 100%;
  height: 100vh;
  color:var(--base-background-color);
  color: #333;
  font-weight: normal;
  margin: 0;
  padding: 0;
  font-style: normal;
  font-size: 30rpx;
  /* ---- common end ----*/
  /* ---- flex start ----*/
  display: flex;
  flex-direction: column;
  /* 换行 */
  flex-wrap: nowrap;
  /* 主轴上的对齐方式 */
  justify-content: center;
  /* 交叉轴上的对齐方式 */
  align-items: center;
  /* 属性定义了多根轴线的对齐方式。如果项目只有一根轴线，该属性不起作用 */
  align-content: center;
  /* 属性允许单个项目有与其他项目不一样的对齐方式，可覆盖align-items属性。默认值为auto，表示继承父元素的align-items属性，如果没有父元素，则等同于stretch */
  align-self: center;
  /* ---- flex end ----*/
}

.common-button{
  width: 100%;
  height: 100%;
  border: 2rpx;
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border-color: var(--base-button-background-color);
  border-radius: 12rpx;
  background-color: var(--base-button-background-color);
}

.common-input{
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 26rpx;
  color: #333;
  border-radius: 12rpx;
  background-color: white;
}

.common-input-placeholder {
  width: 100%;
  height: 80rpx;
  font-size: 26rpx;
  color: #999;
  border-radius: 12rpx;
  background-color: white;
}

.common-image{
  display: flex;
  padding: 0;
  margin: 0;
  width: 300rpx;
  height: 300rpx;
}

.common-text-title{
  display: flex;
  padding: 0;
  margin: 0;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  font-style: normal;
}

.common-text-description{
  display: flex;
  padding: 0;
  margin: 0;
  color: #999;
  font-size: 24rpx;
  font-weight: normal;
  font-style: normal;
}

.common-list-item{
  display: block;
  padding: 0;
  margin: 0;
  width: 100%;
  height: 100%;
}