@import "../../common.wxss";

/**index.wxss**/
page {
  background-color: white;
}

.container {
  margin:0;
  padding: 0;
  width: 100%;
  height: 100vh;

  /* ---- flex start ----*/
  display: flex;

  /* 方向 */
  flex-direction: column;

  /* 换行 */
  flex-wrap: nowrap;

  /* 主轴上的对齐方式 */
  justify-content: flex-start;

  /* 交叉轴上的对齐方式 */
  align-items: center;

  /* 属性定义了多根轴线的对齐方式。如果项目只有一根轴线，该属性不起作用 */
  /* align-content: center; */

  /* 属性允许单个项目有与其他项目不一样的对齐方式，可覆盖align-items属性。默认值为auto，表示继承父元素的align-items属性，如果没有父元素，则等同于stretch */
  /* align-self: center; */

  /* ---- flex end ----*/
}

.list{
  margin:0;
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.list-item{
  /* ---- flex start ----*/
  display: flex;

  /* 方向 */
  flex-direction: row;

  /* 换行 */
  flex-wrap: nowrap;

  /* 主轴上的对齐方式 */
  justify-content: flex-start;

  /* 交叉轴上的对齐方式 */
  align-items: center;

  /* 属性定义了多根轴线的对齐方式。如果项目只有一根轴线，该属性不起作用 */
  /* align-content: center; */

  /* 属性允许单个项目有与其他项目不一样的对齐方式，可覆盖align-items属性。默认值为auto，表示继承父元素的align-items属性，如果没有父元素，则等同于stretch */
  /* align-self: center; */

  /* ---- flex end ----*/
  margin:0;
  width: 100%;
  border-bottom: 2rpx solid #F5F5F5;
  background-color: #FFFFFF
}
.list-item-image{
  display: flex;
  flex: 1;
  min-width: 190rpx;
  background-color: #EFEFEF;
  height: 190rpx;
  margin-left: 15rpx;
}
.list-item-content{
  margin: 1rpx;
  display: flex;
  margin-left: 20rpx;
  flex-direction: column;
  flex: 3;
}
.list-item-title{
  display: flex;
  color: #333;
  font-size: 30rpx;
}
.list-item-time{
  display: flex;
  color: #999;
  font-size: 24rpx;
}
