<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF" monitorInterval="1800">
    <properties>
        <property name="LOG_HOME">build/log/log4j2</property>
        <property name="BACKUP_HOME">{LOG_HOME}/backup</property>
        <property name="SERVER_NAME">smart.housekeeper</property>
    </properties>
    <appenders>
        <Console name="Appender-Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout
                charset="UTF-8"
                pattern="[%style{%d{mm:ss SSS}}{bright,green}][%highlight{%p{length=1}}][%style{%t}{bright,white}][%style{%C{1}#%M:%L}{bright,yellow}]: %style{%msg%n}{bright,white}%style{%throwable}{red}"
                disableAnsi="false" noConsoleNoAnsi="false"/>
        </Console>
        <RollingRandomAccessFile name="Appender-File"
                                 fileName="${LOG_HOME}/${SERVER_NAME}.log"
                                 filePattern="${LOG_HOME}/${SERVER_NAME}.%d{yyyy-MM-dd-HH}.log">
            <PatternLayout charset="UTF-8"
                           pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n%throwable}{FATAL=Blinking Bright Red, ERROR=Bright Red, WARN=Bright Yellow, INFO=Bright White, DEBUG=Bright Blue, TRACE=Bright White}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10M"/>
                <DefaultRollOverStrategy max="10"/>
            </Policies>
        </RollingRandomAccessFile>
    </appenders>

    <!-- ALL < TRACE < DEBUG < INFO < WARN < ERROR < FATAL < OFF -->
    <loggers>
        <!-- Root Logger -->
        <root level="WARN">
            <appender-ref ref="Appender-Console"/>
            <appender-ref ref="Appender-File"/>
        </root>
        <logger name="com.smart" level="WARN" additivity="false">
            <appender-ref ref="Appender-Console"/>
            <appender-ref ref="Appender-File"/>
        </logger>
    </loggers>
</configuration>
